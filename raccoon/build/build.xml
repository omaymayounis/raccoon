<project name="GUI" default="dist" basedir=".">
    <description>
        Ant builder for the GUI
    </description>
  <!-- set global properties for this build -->
	<property name="systemname" value="nc"/>
  <property name="src" location="../src"/>
  <property name="build" location="../bin"/>
  <property name="dist"  location="."/>

  <tstamp>
     <format property="TODAY" pattern="yyyy-MM-dd HH:mm:ss" />
  </tstamp>
  <property name="version.num" value="1.00"/>
  <buildnumber file="${dist}/META-INF\build.num"/>
  <manifest file="${dist}/META-INF\MANIFEST.MF">
        <attribute name="Built-By" value="Reza"/>
        <attribute name="Main-Class" value="putils.SystemPackageVersion"/>
        <attribute name="Implementation-Version" 
                     value="${version.num}-b${build.number}"/>
		<attribute name="Built-Date" value="${TODAY}"/>
  </manifest>

  <target name="init">
    <!-- Create the time stamp -->
    <tstamp/>
    <!-- Create the build directory structure used by compile -->
    <mkdir dir="${build}"/>
  </target>

  <target name="compile" depends="init"
        description="compile the source " >
    <!-- Compile the java code from ${src} into ${build} --> 
    	<javac srcdir="${src}" destdir="${build}"/> 
  </target>

  <target name="dist" depends="compile" description="generate the distribution" >
    <!-- Create the distribution directory -->
  	<!-- <mkdir dir="${dist}/"/> -->

    <!-- Put everything in ${build} into the MyProject-${DSTAMP}.jar file -->
    <jar jarfile="${dist}/${systemname}.jar" manifest="${dist}/META-INF\MANIFEST.MF" basedir="${build}"/>
  </target>

  <target name="clean"
        description="clean up" >
    <!-- Delete the ${build} and ${dist} directory trees -->
    <delete dir="${build}"/>
    <delete dir="${dist}"/>
  </target>
</project>